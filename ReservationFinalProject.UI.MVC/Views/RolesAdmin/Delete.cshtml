@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete";
}

<h3 class="centerText">Are you sure you want to delete this Role? </h3>

<div id="crudContainer">
    <div class="row">
        <p>
            <strong>@Html.DisplayNameFor(model => model.Name):</strong>
            @Html.DisplayFor(model => model.Name)
        </p>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="leftFooter">
            <input type="submit" value="Delete" class="confirmDelete" />
        </div>
    }
    <div id="rightFooter">
        @Html.ActionLink("Back", "Index", null, new { @class = "backButton" })
    </div>
</div>
