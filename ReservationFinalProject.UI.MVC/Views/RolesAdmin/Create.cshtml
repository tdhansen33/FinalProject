@model ReservationFinalProject.UI.MVC.Models.RoleViewModel

@{
    ViewBag.Title = "Add new role!";
}

<h2 class="centerText">@ViewBag.Title</h2>


<div id="crudContainer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Role", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
        </div>
        <div id="leftFooter">
            <input type="submit" value="Add" class="saveButton" />
        </div>
    }

    <div id="rightFooter">
        @Html.ActionLink("Back", "Index", null, new { @class = "backButton" })
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
