@model IEnumerable<ReservationFinalProject.DATA.EF.Location>

@{
    ViewBag.Title = "Locations";
}

@if (User.IsInRole("Admin"))
{
    <div>
        @Html.ActionLink("Add Location", "Create", "Locations", null, new { @class = "createButton" })
    </div>
}
<table class="table display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationLimit)
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th></th>}
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", new { id=item.LocationID })">
                        @Html.DisplayFor(modelItem => item.LocationName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationLimit)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }, new { @class = "editButton" }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.LocationID }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.LocationID }, new { @class = "deleteButton" })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                responsive: true
            })
        });
    </script>
}
