@model ReservationFinalProject.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Delete ";
}

<h3 class="centerText">Are you sure you want to delete this User?</h3>

<div id="crudContainer">
    <div class="dl-horizontal">
        <p>
            <strong>@Html.DisplayNameFor(model => model.UserName):</strong>
            @Html.DisplayFor(model => model.UserName)
        </p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="leftFooter">
            <input type="submit" value="Delete" class="confirmDelete" />
        </div>
    }
    <div id="rightFooter">
        @Html.ActionLink("Back", "Index", null, new { @class = "backButton" })
    </div>
</div>
