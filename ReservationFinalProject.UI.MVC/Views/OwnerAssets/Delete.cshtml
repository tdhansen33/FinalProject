@model ReservationFinalProject.DATA.EF.OwnerAsset

@{
    ViewBag.Title = "Delete";
}

<h3 class="centerText">Are you sure you want to delete this child?</h3>
<div id="crudContainer">
    <div class="row">
        <p>
            <strong>@Html.DisplayNameFor(model => model.AssetName):</strong>
            @Html.DisplayFor(model => model.AssetName)
        </p>

        <p>
            <strong>@Html.DisplayNameFor(model => model.SpecialNotes):</strong>
            @Html.DisplayFor(model => model.SpecialNotes)
        </p>

        <p>
            <strong>@Html.DisplayNameFor(model => model.IsActive):</strong>
            @Html.DisplayFor(model => model.IsActive)
        </p>

        <p>
            <strong>@Html.DisplayNameFor(model => model.DateAdded):</strong>
            @Html.DisplayFor(model => model.DateAdded)
        </p>

        <p>
            <strong>@Html.DisplayNameFor(model => model.UserDetail.FullName):</strong>
            @Html.DisplayFor(model => model.UserDetail.FullName)
        </p>
